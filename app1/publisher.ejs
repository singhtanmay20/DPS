<!DOCTYPE html>
<html>
<head>
	<title>Welcome to Publish Article</title>
	<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
	<script>
		function submitarticle() {
			console.log(document.getElementById('id').value);
			$.ajax({
				url:"http://10.5.0.5:5502/subscriber",
				data:{
				article:document.getElementById("article").value,
				topic:document.getElementById("topic").value,
					},
				type:"POST",
				dataType:"json",
				async:"false",
				})
				.done(function(json){
				console.log("done")

			})

	}
	</script>
	
</head>
<body>
	<body>
	<div align="center">
		<h1>Select the publisher and today's topic</h1>
		<div>
			<select id="id" class="id" style="font-size: 30px;width: 200px;">
				<option>Publisher1</option>
				<option>Publisher2</option>
				<option>Publisher3</option>
				<option>Publisher4</option>
			</select>
			<select id="topic" class="topic" style="font-size: 30px; margin-left: 20px;width: 150px;">
				<option value="topic1">Topic1</option>
				<option value="topic2">Topic2</option>
				<option value="topic3">Topic3</option>
				<option value="topic4">Topic4</option>
			</select>
		</div>
		</br>
		<textarea id="article" class="article" rows="10" cols="50" style="font-size: 40px"></textarea><br>
		</br>
		<button type="button" onclick="submitarticle()" style="font-size: 20px">Submit Article</button>
	</div>
</body>
</html>